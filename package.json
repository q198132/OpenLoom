{
  "name": "openloom",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "openloom": "./bin/openloom.mjs"
  },
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:backend": "tsx watch packages/backend/src/index.ts",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
